@using CustomerManagerWeb.Models.Helpers
@model CustomerManagerWeb.Models.Customer;
@{
    ViewBag.Title = "Detalhes do Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        window.onload = function () {
            alert(decodeURIComponent('@Uri.EscapeDataString(successMessage)'));
        };
    </script>
}


<div class="form-group">
    <a href="@Url.Action("Index", "Customer")" class="btn btn-info">Voltar para a Lista</a>
</div>
<div style="padding:20px">

    <h2>Detalhes do Cliente</h2>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Nome:")
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Email:")
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
    {
        <img src="data:image/png;base64,@Model.CompanyLogo" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
    }
    else
    {
        <text>Nenhuma imagem disponível</text>
    }
    </div>

</div>

@Html.Partial("IndexAddress", Model)


