@using CustomerManagerWeb.Models.Helpers
@model CustomerManagerWeb.Models.Address;
@{
    ViewBag.Title = "Alteração de Endereço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditAddress", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id);
    @Html.HiddenFor(x => x.CustomerId);

    <div style="padding:20px">
        <h2>Alteração de endereço</h2>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Logradouro:")
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="margin-top: 10px">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a href="@Url.Action("Index", "Customer")" class="btn btn-info">Voltar para a Lista</a>
        </div>
    </div>
}

<script type="text/javascript">
</script>